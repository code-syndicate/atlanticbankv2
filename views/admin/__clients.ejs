<div class="overflow-x-scroll overflow-y-scroll mt-12">
  <p
    style="font-family: raleway"
    class="font-bold text-center text-white py-2 text-xl"
  >
    Manage clients
  </p>

  <table class="w-full mx-1 md:mx-auto">
    <tr
      class="font-bold text-white text-center bg-gray-800"
      style="font-family: work sans"
    >
      <th>Actions</th>

      <th>
        Modify <br />
        balance
      </th>

      <th>Firstname</th>
      <th>Lastname</th>
      <th>Gender</th>

      <th class="pb-4">Email</th>
      <th>Phone</th>

      <th>PIN</th>

      <th>Account ID</th>
      <th>Status</th>

      <th>Account number</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Date of birth</th>
      <th>Balance</th>
      <th>Total credit</th>
      <th>Total debit</th>
      <th>Last login</th>
    </tr>
    {/ clients.map((c)=>{ /}

    <tr
      style="font-family: raleway"
      class="text-white py-4 md:py-2 text-lg md:text-xl text-center bg-blue-400 hover:bg-blue-300 cursor-pointer"
    >
      <td class="px-4">
        <!-- <a href='/manage/edit-client/{/= c._id /}'> <i title="Edit client"
                       class="bi-pencil-square p-2 hover:text-green-500 cursor-pointer "></i></a> -->
        <a href="/manage/delete-customer/{/= c._id /}">
          <i
            title="Delete client"
            class="bi-trash p-2 hover:text-red-500 cursor-pointer"
          ></i
        ></a>

        {/ if(c.disabled){ /}
        <a
          class="text-xs px-4 cursor-pointer block py-1 bg-green-500 hover:bg-green-400"
          href="/manage/U/{/= c._id /}/activate"
        >
          Activate client</a
        >
        {/ } else { /}
        <a
          class="text-xs px-4 cursor-pointer block py-2 bg-red-500 hover:bg-red-400"
          href="/manage/U/{/= c._id /}/deactivate"
        >
          Deactivate client</a
        >
        {/ } /}
      </td>

      <td>
        <form
          class="space-y-2"
          action="/manage/U/{/= c._id /}/balance-control"
          method="post"
        >
          <input
            name="amount"
            type="text"
            placeholder="Amount"
            class="block max-w-[150px] focus:outline-none focus:border focus:border-sky-500 text-black font-normal text-sm px-2 py-1 rounded"
          />

          <button
            type="submit"
            class="block max-w-[150px] text-center bg-white text-sky-600 font-medium hover:bg-black hover:text-white py-2 px-4 text-sm rounded"
          >
            Modify
          </button>
        </form>
      </td>

      <td class="px-4">{/= c.firstname /}</td>
      <td class="px-4">{/= c.lastname /}</td>
      <td class="px-4">{/= c.gender /}</td>

      <td class="px-4">{/= c.email /}</td>
      <td class="px-4">{/= c.phone /}</td>
      <td class="px-4">{/= c.pin /}</td>

      <td class="px-4">{/= c.accountId /}</td>
      {/ if(c.disabled){ /}
      <td class="px-4 font-bold text-red-500 bg-gray-200 text-xs">DISABLED</td>
      {/ } else { /}
      <td class="px-4 font-bold text-green-500 bg-gray-200 text-xs">ACTIVE</td>
      {/ } /}

      <td class="px-4">{/= c.accountNumber /}</td>
      <td class="px-4">{/= c.city /}</td>
      <td class="px-4">{/= c.state /}</td>
      <td class="px-4">{/= c.country /}</td>
      <td class="px-4">{/= c.dateOfBirth /}</td>
      <td class="px-4">${/= numeral(c.balance) /}</td>
      <td class="px-4">${/= numeral(c.totalCredit) /}</td>
      <td class="px-4">${/= numeral(c.totalDebit) /}</td>
      <td class="px-4">{/= c.lastLogin.toLocaleString() /}</td>
    </tr>

    {/ }) /}
  </table>
</div>
